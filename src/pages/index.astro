---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroImage from "../components/HeroImage.astro";
import SpeakerCarousel from "../components/SpeakerCarousel.astro";
import Countdown from "../components/Countdown.astro";
import SponsorList from "../components/SponsorList.astro";
import PartnerList from "../components/PartnerList.astro";

const register_link = "https://www.eventbrite.sg/e/pycon-my-2024-tickets-882784250457 ";
const cfs_link = "https://docs.google.com/forms/d/e/1FAIpQLSfDTb2Nex843MBf1C-FQKNwPrholCXHIoThmWkkCKA3FUYfBg/viewform";
const cfp_link = "https://cfp.pycon.my/pyconmy-2024/cfp";

import { SponsorLists } from "../sponsorLists";
import { PartnerLists } from "../partnerLists";
import { AllSpeakers, KeyNoteSpeakers } from "../speakerLists";
---

<BaseLayout title="PyCon MY 2024">
  <HeroImage />
  <div class="bg-blue flex flex-col items-center justify-center">
    <div class="flex flex-col lg:flex-row gap-3">

    <a href={cfs_link} class="mt-10 w-72 mb-12" target="_blank"
      ><div class="relative">
        <img class="absolute" src="/assets/CFS_Mouse_Up.png" />
        <img
          class="absolute opacity-0 hover:opacity-100"
          src="/assets/CFS_Mouse_Over.png"
        />
      </div></a
    >

    <a href={register_link} class="mt-10 w-72 mb-12" target="_blank">
      <div class="relative">
        <img class="absolute" src="/assets/Register_Mouse_Up.png" />
        <img
          class="absolute opacity-0 hover:opacity-100"
          src="/assets/Register_Mouse_Over.png"
        />
      </div>
    </a>

  </div>
    <h3 class="mt-16 text-white font-bold text-xl sm:text-4xl font-autobus">
      Keynote Speakers
    </h3>
    <SpeakerCarousel speakers={KeyNoteSpeakers} />
    <h3 class="mt-8 text-white font-bold text-xl sm:text-4xl font-autobus">
      Speakers
    </h3>
    <SpeakerCarousel speakers={AllSpeakers} />
    <Countdown />

    <a href={register_link} class="mt-8 w-72 mb-36" target="_blank">
      <div class="relative">
        <img class="absolute" src="/assets/Register_Mouse_Up.png" />
        <img
          class="absolute opacity-0 hover:opacity-100"
          src="/assets/Register_Mouse_Over.png"
        />
      </div>
    </a>
  </div>

  <SponsorList sponsors={SponsorLists} />
  <PartnerList partners={PartnerLists} />
</BaseLayout>
