---
import BaseLayout from "../layouts/BaseLayout.astro";
import SpeakerCardDescription from "../components/SpeakerCardDescription.astro";
import { AllSpeakers, KeyNoteSpeakers } from "../speakerLists";
---

<BaseLayout title="PyCon MY Speakers">
    <div class="flex flex-col items-center justify-center bg-yellow py-8">
    <h3 class="my-8 text-black-900 font-bold text-xl sm:text-3xl">
        Keynote Speakers
    </h3>
    {KeyNoteSpeakers.map(speaker => (
        <SpeakerCardDescription image={speaker.image} name={speaker.name} subtitle={speaker.title} description={speaker.desc} />
        ))}
        <h3 class="my-8 text-black-900 font-bold text-xl sm:text-3xl">
             Speakers
        </h3>
        {AllSpeakers.map(speaker => (
            <SpeakerCardDescription image={speaker.image} name={speaker.name} subtitle={speaker.title} description={speaker.desc} />
            ))}
</div>
</BaseLayout>