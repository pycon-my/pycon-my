---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

interface Props {
  frontmatter: {
    title: string;
    description: string;
    heroImage?: string;
    pubDate?: string;
    updatedDate?: string;
  };
}

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={frontmatter.title} description={frontmatter.description} />
  </head>

  <body>
    <Header />
    <main>
      <article class="flex justify-center">
        <div class="prose">
          <div class="pt-24">
            {
              frontmatter.heroImage && (
                <img src={frontmatter.heroImage} class="w-full" alt="" />
              )
            }
          </div>
          <div class="pt-10 pb-10 mx-auto p-3">
            <FormattedDate
              date={frontmatter?.pubDate
                ? new Date(frontmatter.pubDate)
                : new Date("1 Jan 2024")}
            />
            {
              frontmatter.updatedDate && (
                <div class="last-updated-on">
                  Last updated on{" "}
                  <FormattedDate date={new Date(frontmatter.updatedDate)} />
                </div>
              )
            }
            <h1>{frontmatter.title}</h1>
            <hr />
            <slot />
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
