---
const { image, name, subtitle } = Astro.props;

---
<div class="card w-80 bg-white shadow-xl mx-3">
  <figure class="px-10 pt-10">
    <div class="w-48 h-48 flex items-center justify-center overflow-hidden">
      <img src={image} alt={name} class="max-w-full max-h-full object-contain" />
    </div>
  </figure>
  <div class="card-body items-center text-center text-black-900">
    <h2 class="card-title text-xl sm:text-2xl">{name}</h2>
    {subtitle && (<p>{subtitle}</p>)}
  </div>
</div>
